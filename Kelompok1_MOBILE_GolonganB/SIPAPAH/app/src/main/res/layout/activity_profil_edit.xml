<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BaruActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/edt_profil_edit_foto"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@color/abuabu"
            android:src="@drawable/ic_profil"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <Button
            android:fontFamily="@font/mmedium"
            android:id="@+id/btn_profil_edit_foto"
            android:layout_gravity="center"
            android:text="Pilih Foto Profil"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/mmedium"
            android:gravity="center_vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="Nama : "/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="@font/mlight"
                android:id="@+id/edt_profil_edit_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/putih"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"/>

        </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/mmedium"
                android:gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Email : "/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:fontFamily="@font/mlight"
                    android:id="@+id/edt_profil_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:hint="Email"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/mmedium"
                android:gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Password : "/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:fontFamily="@font/mlight"
                    android:id="@+id/edt_profil_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/mmedium"
                android:gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Alamat : "/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:fontFamily="@font/mlight"
                    android:id="@+id/edt_profil_edit_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:hint="Alamat Lengkap"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/mmedium"
                android:gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="No.HP : "/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:fontFamily="@font/mlight"
                    android:id="@+id/edt_profil_edit_nohp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:hint="Nomor Telepon"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:fontFamily="@font/mmedium"
            android:layout_margin="10dp"
            android:id="@+id/btn_profil_edit_perbarui"
            android:backgroundTint="@color/hijau2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Perbarui"/>

    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_loading"
        android:layout_centerInParent="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</RelativeLayout>