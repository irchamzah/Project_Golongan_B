<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:id="@+id/img_layanan_dikonfirmasi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:fontFamily="@font/mbold"
                android:textSize="15dp"
                android:textStyle="bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/hitam"
                android:id="@+id/tv_layanan_dikonfirmasi_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Kategori"/>

            <TextView
                android:textSize="10dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/mmedium"
                android:textColor="@color/abuabugelap"
                android:id="@+id/tv_layanan_dikonfirmasi_tanggaljemput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Jemput"/>

            <TextView
                android:id="@+id/tv_layanan_dikonfirmasi_keterangan_"
                android:layout_margin="5dp"
                android:fontFamily="@font/mmedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan Pesanan"/>

            <TextView
                android:id="@+id/tv_layanan_dikonfirmasi_status"
                android:textSize="13dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/mmedium"
                android:textColor="@color/kuning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dikonfirmasi"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>







</androidx.cardview.widget.CardView>